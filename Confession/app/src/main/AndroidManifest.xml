<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.confession">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Confession">
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat"/>
        <activity android:name=".views.activities.AddPostActivity"></activity>
        <activity android:name=".views.activities.CreateGroupActivity" />
        <activity android:name=".views.activities.CoverActivity" />
        <activity android:name=".views.activities.CommentActivity" />
        <activity
            android:name=".views.activities.SignUpActivity"
            android:noHistory="true" />
        <activity
            android:name=".views.activities.ForgotPasswordActivity"
            android:noHistory="true" />
        <activity
            android:name=".views.activities.HomePageActivity"
            android:windowSoftInputMode="adjustPan" />

        <activity android:name=".views.activities.SignInActivity"></activity>

        <activity
            android:name=".views.activities.MainActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


    </application>

</manifest>