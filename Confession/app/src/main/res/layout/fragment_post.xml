<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.PostFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <!--        Group icon + name + time-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/sample_group_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_group_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Group name"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/txt_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1 hour ago"
                    android:fontFamily="@font/nunito_regular"
                    android:textColor="#8B8B8B"
                    android:textSize="14sp"/>

            </LinearLayout>

        </LinearLayout>

        <!--        Post content: Title + Text + Images-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

<!--            <TextView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:textStyle="bold"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:layout_marginLeft="10dp"-->
<!--                android:layout_marginRight="10dp"-->
<!--                android:text="Post title"-->
<!--                android:fontFamily="@font/nunito_semi_bold"-->
<!--                android:textColor="@color/black"-->
<!--                android:textSize="18sp"/>-->

            <TextView
                android:id="@+id/txt_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/lorem"
                android:fontFamily="@font/nunito_light"
                android:textColor="@color/black"
                android:textSize="16sp"/>

<!--            <ImageView-->
<!--                android:id="@+id/iv_image"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="256dp"-->
<!--                android:layout_marginTop="5dp"-->
<!--                android:scaleType="centerCrop"-->
<!--                android:src="@drawable/post_image"/>-->

        </LinearLayout>

        <!--        Reaction-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/react_icon" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/comment_icon" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.834 likes"
                android:fontFamily="@font/nunito_semi_bold"
                android:textColor="@color/black"
                android:textSize="14sp"/>

        </LinearLayout>

        <!--        Comments-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <!--            TODO Add comments from Phong-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="See all comments"
                android:fontFamily="@font/nunito_regular"
                android:textColor="#A7A7A7"
                android:textSize="15sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/tree_icon" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="Leave a comment..."
                    android:textSize="16sp"
                    android:fontFamily="@font/nunito_regular"
                    android:background="@null"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>