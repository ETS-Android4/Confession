<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginTop="5dp"
    android:padding="10dp"
    android:layout_marginBottom="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="999dp"
        android:elevation="0dp">

        <ImageView
            android:id="@+id/search_gr_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/img_avatar_test_round"
            android:contentDescription="@string/description"
            />
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/search_gr_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="loveishurt"
            android:textSize="16sp"
            android:fontFamily="@font/nunito_regular"
            android:textColor="@color/black"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Private group"
                android:fontFamily="@font/nunito_semi_bold"
                android:textColor="@color/edit_no_focus"
                android:textSize="14sp"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:id="@+id/search_gr_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100 members"
                android:fontFamily="@font/nunito_semi_bold"
                android:textColor="@color/edit_no_focus"
                android:textSize="14sp"
                />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/search_gr_user_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Joined"
        android:fontFamily="@font/nunito_semi_bold"
        android:textColor="#9F9D9D"
        android:textSize="14sp"
        android:textAlignment="center"
        />
</LinearLayout>
