<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/custom_bg_shadow"
    android:gravity="center_horizontal|center_vertical"
    android:paddingTop="15dp"
    android:paddingBottom="50dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <View
        android:layout_width="50dp"
        android:layout_height="4dp"
        android:background="@drawable/custom_rounded"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical"
        >
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardCornerRadius="999dp">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/img_avatar_test"/>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/add_post_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Are you sure to leave this group?"
                android:fontFamily="@font/nunito_bold"
                android:textColor="@color/black">

            </TextView>





        </LinearLayout>

    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/user_confirm_leave_group_btn"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/custom_bg_red_btn"
        android:fontFamily="@font/nunito_regular"
        android:text="Leave"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:enabled="true"/>



</LinearLayout>